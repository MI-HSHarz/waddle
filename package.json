{
  "name": "waddle",
  "version": "0.3.0",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "start": "ng serve",
    "lint": "tslint \"src/**/*.ts\"",
    "test": "ng test",
    "pree2e": "webdriver-manager update",
    "e2e": "protractor",
    "build": "ng build && cp -R src/public dist/public",

    "buildfast" : "ng build && rsync --progress --exclude=*.mp4  src/public dist",

    "prepare": "cp -a electron/. dist",
    "electron": "npm run prepare && electron dist",

    "package": "npm run build && npm run prepare && electron-packager dist 'Religion trifft Beruf' --tmpdir=false --platform=all --arch=all --out=Staging --overwrite",

    "package-all": "npm run prepare && electron-packager dist 'Religion trifft Beruf' --tmpdir=false --out=Staging --platform=all --arch=all  --overwrite",
    "package-mac": "electron-packager dist 'Religion trifft Beruf' --tmpdir=false --out=Staging --platform=darwin --arch=all --overwrite",
    "package-win": "electron-packager dist 'Religion trifft Beruf' --tmpdir=false --out=Staging --platform=win32 --arch=ia32  --overwrite"

  },
  "private": true,
  "dependencies": {
    "@angular/common": "~2.1.2",
    "@angular/compiler": "~2.1.2",
    "@angular/core": "~2.1.2",
    "@angular/forms": "~2.1.2",
    "@angular/http": "~2.1.2",
    "@angular/platform-browser": "~2.1.2",
    "@angular/platform-browser-dynamic": "~2.1.2",
    "@angular/router": "~3.1.2",
    "core-js": "^2.4.1",
    "rxjs": "5.0.0-beta.12",
    "ts-helpers": "^1.1.1",
    "zone.js": "^0.6.23",

    "jquery": "^2.1.4",
    "ng2-pdf-viewer" : "~0.1.0",
    "ng2-page-scroll":  "4.0.0-beta.1"

  },
  "devDependencies": {
    "@types/jasmine": "^2.2.30",
    "@types/node": "^6.0.42",
    "angular-cli": "1.0.0-beta.18",
    "codelyzer": "1.0.0-beta.1",
    "electron": "^1.4.4",
    "electron-prebuilt": "1.4.10",
    "electron-packager": "8.3.0",
    "jasmine-core": "2.4.1",
    "jasmine-spec-reporter": "2.5.0",
    "karma": "1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.2.1",
    "protractor": "4.0.9",
    "ts-node": "1.2.1",
    "tslint": "3.13.0",
    "typescript": "~2.0.3"
  }
}
